{
  "manifest_version": 3,
  "name": "AniSync",
  "version": "1.0.0",
  "description": "Tự động đồng bộ lịch sử xem anime từ Animevietsub lên AniList",
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "*://anilist.co/*",
    "*://graphql.anilist.co/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AniList Sync",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "domains.html", "domains.js"],
      "matches": ["<all_urls>"]
    }
  ]
}